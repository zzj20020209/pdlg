<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzj.dao.GoodsDao">
	<resultMap id="goodsmapper" type="com.zzj.vo.Goods">
		<id column="gid" property="gid"></id>
		<association property="gsid" javaType="com.zzj.vo.GoodSort"
					 select="com.zzj.dao.GoodSortDao.queryGoodSortBygid" column="gsid"
					 fetchType="lazy">
		</association>
	</resultMap>
	<select id="queryAllGoods" parameterType="goods" resultMap="goodsmapper">

		select * from goods
		<where>
			<if test="gname!=null">and gname like concat('%',#{gname},'%') </if>
		</where>

	</select>

	<select id="querycountGoods" parameterType="goods" resultType="int">
		select count(*) FROM goods
		<where>
			<if test="gname!=null">and gname like concat('%',#{gname},'%') </if>
		</where>
	</select>


	<insert id="addGoods" parameterType="goods">
		INSERT INTO goods(gname,gunit,gprice,gimage,gsid,gstatus)
		values (#{gname},#{gunit},#{gprice},#{gimage},#{goodSort.gsid},#{gstatus})
	</insert>

	<delete id="deleteGoods" parameterType="int">
		update goods set gstatus=1 where gid=#{gid}

	</delete>
	<select id="queryGoodsBygid" parameterType="int" resultMap="goodsmapper">
        select * from goods where gid=#{gid}
    </select>
	<update id="updateGoods" parameterType="goods">

		update goods set
		gname=#{gname},
        gunit=#{gunit},
        gprice=#{gprice},
        gimage=#{gimage},
         gsid=#{goodSort.gsid},
          gstatus=#{gstatus},
          where gid=#{gid}

	</update>
	<delete id="deleteGoodsduo" parameterType="int">
		update goods set gstatus=1
		<foreach collection="array" item="gid" open="where gid in(" separator="," close=");">
			#{gid}
		</foreach>
	</delete>

</mapper>